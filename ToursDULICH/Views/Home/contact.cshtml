@{
    ViewData["Title"] = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap js-fullheight"
     style="background-image: url('@Url.Content("~/images/bg_2.jpg")')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center"
             data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate text-center"
                 data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs"
                   data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    <span class="mr-2"><a href="~/Home/Index">Trang Chủ</a></span>
                    <span>Liên Hệ</span>
                </p>
                <h1 class="mb-3 bread"
                    data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    Liên Hệ Chúng Tôi
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Thông Tin Liên Lạc</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3">
                <p>
                    <span>Địa Chỉ:</span> 182, Lê Duẩn, P. Trường Thi, Thành phố Vinh, T. Nghệ An
                </p>
            </div>
            <div class="col-md-3">
                <p>
                    <span>SDT:</span> <a href="tel://1234567920">+ 1235 2355 98</a>
                </p>
            </div>
            <div class="col-md-3">
                <p>
                    <span>Email:</span>
                    <a href="mailto:info@yoursite.com">info@yoursite.com</a>
                </p>
            </div>
            <div class="col-md-3">
                <p><span>Website:</span> <a href="#">Cato.com</a></p>
            </div>
        </div>

        <div class="row block-9">
            <div class="col-md-6 pr-md-5">
                @* Nếu muốn xử lý form liên hệ thực tế, đổi action thành Controller/Action tương ứng *@
                <form asp-action="SendContact" asp-controller="Home" method="post">
                    <div class="form-group">
                        <input type="text" name="Name" class="form-control" placeholder="Họ Tên" required />
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <input type="text" name="Subject" class="form-control" placeholder="Vấn Đề" />
                    </div>
                    <div class="form-group">
                        <textarea name="Message" cols="30" rows="7" class="form-control" placeholder="Lời Nhắn"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gửi Lời Nhắn" class="btn btn-primary py-3 px-5" />
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3785.680386607873!2d105.69246977492467!3d18.666735566289075!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3139cc445f5c7c3f%3A0x5b850a54d383e128!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBW!5e0!3m2!1svi!2s!4v1726142158881!5m2!1svi!2s"
                        style="
        width:100%;
        height:400px;
        border:0;
        border-radius:10px;
        box-shadow:0 4px 10px rgba(0,0,0,0.2);
        min-height:400px;"
                        allowfullscreen
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>

            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <span class="subheading">Nơi nghỉ dưỡng</span>
                <h2 class="mb-4"><strong>Popular</strong> Khách Sạn &amp; Resort</h2>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="destination-slider owl-carousel ftco-animate">
                    @if (Model.FeaturedHotels != null && Model.FeaturedHotels.Any())
                    {
                        foreach (var item in Model.FeaturedHotels)
                        {
                            <div class="item">
                                <div class="destination">
                                    <a href="@Url.Action("Detail", "Hotel", new { id = item.HotelId })"
                                       class="img d-flex justify-content-center align-items-center"
                                       style="background-image: url('@(string.IsNullOrEmpty(item.Image) ? "/images/hotel-1.jpg" : item.Image)'); position: relative;">

                                        @if (item.Rating == 5)
                                        {
                                            <span style="position: absolute; top: 10px; left: 10px; background: linear-gradient(45deg, #FFD700, #DAA520); color: #fff; padding: 5px 12px; font-size: 12px; font-weight: bold; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.2); z-index: 10;">
                                                <i class="icon-crown"></i> VIP
                                            </span>
                                        }

                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="icon-search2"></span>
                                        </div>
                                    </a>

                                    <div class="text p-3">
                                        <div class="d-flex">
                                            <div class="one">
                                                <h3><a href="@Url.Action("Detail", "Hotel", new { id = item.HotelId })">@item.Name</a></h3>
                                                <p class="rate">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        if (i < item.Rating)
                                                        {
                                                            <i class="icon-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="icon-star-o"></i>
                                                        }
                                                    }
                                                    <span>@item.Rating Rating</span>
                                                </p>
                                            </div>

                                            <div class="two" style="width: 45%; text-align: right;">
                                                <span class="price per-price" style="display: block; line-height: 1.2;">
                                                    <span style="font-size: 18px; white-space: nowrap; font-weight: bold; color: #f85959;">
                                                        @item.BasePrice.ToString("#,##0") <small>₫</small>
                                                    </span>
                                                    <br />
                                                    <small style="font-size: 12px; color: #999;">/đêm</small>
                                                </span>
                                            </div>
                                        </div>

                                        <p>
                                            @{
                                                string rawDesc = item.Description ?? "";
                                                // Xóa sạch thẻ HTML
                                                string cleanDesc = System.Text.RegularExpressions.Regex.Replace(rawDesc, "<.*?>", String.Empty);
                                                // Cắt ngắn nếu dài quá 80 ký tự
                                                if (cleanDesc.Length > 80) { cleanDesc = cleanDesc.Substring(0, 80) + "..."; }
                                            }
                                            @cleanDesc
                                        </p>

                                        <hr />

                                        <p class="bottom-area d-flex">
                                            <span><i class="icon-map-o"></i> @(item.City?.CityName ?? "Việt Nam")</span>
                                            <span class="ml-auto">
                                                <a href="@Url.Action("Detail", "Hotel", new { id = item.HotelId })">Đặt ngay</a>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center"><p>Chưa có khách sạn nào.</p></div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>



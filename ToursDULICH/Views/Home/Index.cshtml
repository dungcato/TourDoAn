<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <span class="subheading">Ưu đãi đặc biệt</span>
                <h2 class="mb-4"><strong>Top</strong> Gói du lịch</h2>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="destination-slider owl-carousel ftco-animate">
                    @if (Model.FeaturedTours != null && Model.FeaturedTours.Any())
                    {
                        foreach (var item in Model.FeaturedTours)
                        {
                            <div class="item">
                                <div class="destination" style="border: 1px solid #eee; border-radius: 10px; overflow: hidden; height: 100%; min-height: 480px; display: flex; flex-direction: column;">

                                    <a href="@Url.Action("Detail", "Tour", new { id = item.TourId })"
                                       class="img d-flex justify-content-center align-items-center"
                                       style="background-image: url('@(string.IsNullOrEmpty(item.Image) ? "/images/destination-1.jpg" : item.Image)'); height: 250px; background-size: cover; background-position: center; position: relative;">

                                        @if (item.SalePrice.HasValue && item.SalePrice > 0)
                                        {
                                            <span style="position: absolute; top: 10px; left: 10px; background: #f85959; color: #fff; padding: 5px 12px; font-size: 12px; font-weight: bold; border-radius: 20px; z-index: 10; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                                                SALE
                                            </span>
                                        }

                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="icon-search2"></span>
                                        </div>
                                    </a>

                                    <div class="text p-3" style="flex-grow: 1; display: flex; flex-direction: column;">
                                        <div class="d-flex justify-content-between mb-2">
                                            <div class="one" style="width: 60%;">
                                                <h3 style="font-size: 18px; line-height: 1.3; height: 46px; overflow: hidden; margin-bottom: 5px;">
                                                    <a href="@Url.Action("Detail", "Tour", new { id = item.TourId })">@item.Name</a>
                                                </h3>
                                               
                                            </div>

                                            <div class="two" style="width: 40%; text-align: right;">
                                                @if (item.SalePrice.HasValue && item.SalePrice > 0)
                                                {
                                                    <span style="display: block; font-size: 12px; color: #aaa; text-decoration: line-through;">
                                                        @item.Price.ToString("#,##0")<small>đ</small>
                                                    </span>
                                                    <span style="font-size: 18px; color: #f85959; font-weight: bold; display: block;">
                                                        @item.SalePrice.Value.ToString("#,##0")<small>đ</small>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span style="font-size: 18px; color: #f85959; font-weight: bold; display: block; margin-top: 10px;">
                                                        @item.Price.ToString("#,##0")<small>đ</small>
                                                    </span>
                                                }
                                            </div>
                                        </div>

                                        <p style="font-size: 13px; color: #666; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; margin-bottom: 10px; height: 40px;">
                                            @{
                                                string rawDesc = item.Description ?? "";
                                                string cleanDesc = System.Text.RegularExpressions.Regex.Replace(rawDesc, "<.*?>", String.Empty);
                                            }
                                            @cleanDesc
                                        </p>

                                        <p class="days" style="font-size: 12px; color: #999; margin-bottom: 10px;">
                                            <i class="icon-clock-o mr-1"></i> <span>@item.Duration</span>
                                        </p>

                                        <hr style="margin: 10px 0;" />

                                        <p class="bottom-area d-flex align-items-center mt-auto" style="margin-bottom: 0;">
                                            <span style="font-size: 12px; color: #666;">
                                                <i class="icon-map-marker mr-1"></i> @(item.City?.CityName ?? "Việt Nam")
                                            </span>
                                            <span class="ml-auto">
                                                <a href="@Url.Action("Detail", "Tour", new { id = item.TourId })"
                                                   class="btn btn-sm btn-primary py-2 px-3"
                                                   style="border-radius: 20px; border: none !important; box-shadow: none;">
                                                    Xem ngay
                                                </a>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>


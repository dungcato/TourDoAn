@model IEnumerable<ToursDULICH.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold">Danh sách Người dùng</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-user-plus"></i> Thêm mới
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fas fa-check"></i> @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover table-striped">
                    <thead class="bg-info text-white">
                        <tr>
                            <th style="width: 50px;" class="text-center">ID</th>
                            <th>Họ và Tên</th>
                            <th>Email (Tài khoản)</th>
                            <th>Mật khẩu</th>
                            <th class="text-center">Vai trò</th>
                            <th style="width: 150px;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.UserId</td>
                                    <td class="font-weight-bold">@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td class="text-muted">******</td>
                                    <td class="text-center">
                                        @if (item.Role == "Admin")
                                        {
                                            <span class="badge badge-danger">Quản trị viên</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Khách hàng</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-primary btn-sm" title="Sửa">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.UserId" method="post" class="d-inline ml-1" onsubmit="return confirm('Bạn có chắc muốn xóa tài khoản này? Dữ liệu đơn hàng liên quan cũng sẽ bị xóa!');">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center">Chưa có người dùng nào.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
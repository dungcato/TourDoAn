@model ToursDULICH.Models.Room

@{
    ViewData["Title"] = "Thêm Phòng Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold text-primary">Thêm Phòng Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">1. Thông tin Phòng</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="HotelId" class="font-weight-bold">Thuộc Khách sạn <span class="text-danger">*</span></label>
                                <select asp-for="HotelId" class="form-control select2" asp-items="ViewBag.HotelId">
                                    <option value="">-- Chọn Khách sạn --</option>
                                </select>
                                <span asp-validation-for="HotelId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="RoomName" class="font-weight-bold">Tên Phòng / Loại Phòng <span class="text-danger">*</span></label>
                                <input asp-for="RoomName" class="form-control" placeholder="Ví dụ: Phòng Deluxe King, Phòng Tổng thống..." />
                                <span asp-validation-for="RoomName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="font-weight-bold">Mô tả tiện ích</label>
                                <textarea asp-for="Description" id="Detail" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">2. Thiết lập Giá & Ảnh</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Price" class="font-weight-bold">Giá phòng (VNĐ/Đêm)</label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control" type="text" placeholder="Nhập giá..." />
                                    <div class="input-group-append">
                                        <span class="input-group-text">₫</span>
                                    </div>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Ảnh phòng</label>
                                <div class="input-group">
                                    <input asp-for="Image" class="form-control" id="Image" placeholder="Chọn ảnh..." readonly />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-info" onclick="openDialog()">
                                            <i class="fas fa-folder-open"></i> Chọn
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>

                            <div class="text-center mt-3">
                                <img id="imgPreview" src="/images/no-image.jpg"
                                     style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px; border: 1px dashed #ccc;" />
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-block font-weight-bold">
                                <i class="fas fa-save mr-2"></i> LƯU THÔNG TIN
                            </button>
                            <a asp-action="Index" class="btn btn-default btn-block">Hủy bỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@{
    var summerNote = new ToursDULICH.Areas.Admin.Models.SummerNote("#Detail");
}
<partial name="_SummerNote" model="summerNote" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function openDialog() {
            var fm = $('<div/>').dialogelfinder({
                baseUrl: "/Admin/lib/lib/elFinder/",
                url: '/Admin/el-finder-file-system/connector',
                lang: 'vi',
                width: 840,
                height: 450,
                destroyOnClose: true,
                getFileCallback: function (files, fm) {
                    $('#Image').val(files.url);
                    $('#imgPreview').attr('src', files.url);
                },
                commandsOptions: {
                    getfile: {
                        oncomplete: 'close',
                        folders: false
                    }
                }
            }).dialogelfinder('instance');
        }
    </script>
}
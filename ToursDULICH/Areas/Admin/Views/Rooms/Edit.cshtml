@model ToursDULICH.Models.Room

@{
    ViewData["Title"] = "Sửa Thông Tin Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Sửa Thông Tin Phòng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="RoomId" />

            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Thông tin chi tiết</h3>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoomName">Tên Phòng / Số Phòng <span class="text-danger">*</span></label>
                                <input asp-for="RoomName" class="form-control" />
                                <span asp-validation-for="RoomName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="HotelId">Thuộc Khách sạn</label>
                                <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId">
                                    <option value="">-- Chọn Khách sạn --</option>
                                </select>
                                <span asp-validation-for="HotelId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">Giá phòng (VNĐ)</label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control" type="text" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">đ</span>
                                    </div>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Image">Ảnh đại diện</label>
                                <div class="input-group">
                                    <input asp-for="Image" class="form-control" id="Image" placeholder="Chọn ảnh..." />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-warning" onclick="openDialog()">
                                            <i class="fas fa-folder-open"></i> Đổi ảnh
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>

                            <div class="mt-3 text-center">
                                <img id="imgPreview"
                                     src="@(string.IsNullOrEmpty(Model.Image) ? "/images/no-image.jpg" : Model.Image)"
                                     style="max-width: 100%; height: 200px; object-fit: cover; border: 1px dashed #ccc;"
                                     alt="Ảnh xem trước" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Description">Mô tả tiện ích</label>
                        <textarea asp-for="Description" id="Detail" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer text-right">
                    <a asp-action="Index" class="btn btn-secondary mr-2">Hủy bỏ</a>
                    <button type="submit" class="btn btn-warning font-weight-bold"><i class="fas fa-save"></i> Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</section>

@{
    var summerNote = new ToursDULICH.Areas.Admin.Models.SummerNote("#Detail");
}
<partial name="_SummerNote" model="summerNote" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function openDialog() {
            var fm = $('<div/>').dialogelfinder({
                baseUrl: "/Admin/lib/lib/elFinder/", // Đường dẫn chuẩn
                url: '/Admin/el-finder-file-system/connector',
                lang: 'vi',
                width: 840,
                height: 450,
                destroyOnClose: true,
                getFileCallback: function (files, fm) {
                    $('#Image').val(files.url);
                    $('#imgPreview').attr('src', files.url);
                },
                commandsOptions: {
                    getfile: {
                        oncomplete: 'close',
                        folders: false
                    }
                }
            }).dialogelfinder('instance');
        }
    </script>
}
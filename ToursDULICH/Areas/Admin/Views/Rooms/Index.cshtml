@using System.Text.RegularExpressions
@model IEnumerable<ToursDULICH.Models.Room>

@{
    ViewData["Title"] = "Quản lý Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table td {
        vertical-align: middle !important;
    }

    .room-img {
        width: 80px;
        height: 60px;
        object-fit: cover;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold text-primary">Quản lý Phòng</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Thêm Phòng Mới</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách phòng hiện có</h3>

                <div class="card-tools">
                    <form asp-action="Index" method="get" class="form-inline">

                        <div class="input-group input-group-sm mr-2" style="width: 200px;">
                            <select name="hotelId" class="form-control" asp-items="ViewBag.HotelList" onchange="this.form.submit()">
                                <option value="">-- Tất cả khách sạn --</option>
                            </select>
                        </div>

                        <div class="input-group input-group-sm" style="width: 200px;">
                            <input type="text" name="search" class="form-control float-right" placeholder="Tìm tên phòng..." value="@ViewBag.Search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ảnh</th>
                            <th>Tên Phòng</th>
                            <th>Thuộc Khách sạn</th>
                            <th>Giá / đêm</th>
                            <th>Tiện ích</th>
                            <th class="text-center">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoomId</td>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/no-image.jpg" : item.Image)" class="room-img" />
                                </td>
                                <td class="font-weight-bold">@item.RoomName</td>
                                <td>
                                    @if (item.Hotel != null)
                                    {
                                        <span class="badge badge-warning">@item.Hotel.Name</span>
                                    }
                                </td>
                                <td class="text-success font-weight-bold">@item.Price.ToString("N0") đ</td>
                                <td>
                                    @{
                                        string plainText = !string.IsNullOrEmpty(item.Description) ? Regex.Replace(item.Description, "<.*?>", String.Empty) : "";
                                        if (plainText.Length > 50) plainText = plainText.Substring(0, 50) + "...";
                                    }
                                    @plainText
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></a>
                                    <form asp-action="Delete" asp-route-id="@item.RoomId" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa phòng này?');"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
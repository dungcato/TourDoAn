@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - ToursDULICH Admin</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />

    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css" />

    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css" />

    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" asp-area="" class="nav-link">
                        Về trang khách
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fas fa-user-circle"></i> Admin
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-user-cog mr-2"></i> Thông tin
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Home" asp-action="Logout" asp-area="" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="brand-link text-center">
                <span class="brand-text font-weight-light font-weight-bold">TOURS DU LỊCH</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <li class="nav-header font-weight-bold text-muted">QUẢN LÝ DỊCH VỤ</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Tours" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tours" ? "active" : "")">
                                <i class="nav-icon fas fa-plane-departure"></i> <p>Tour Du Lịch</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Hotels" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Hotels" ? "active" : "")">
                                <i class="nav-icon fas fa-hotel"></i> <p>Khách Sạn</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")">
                                <i class="nav-icon fas fa-bed"></i>
                                <p>Phòng Khách Sạn</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Cities" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cities" ? "active" : "")">
                                <i class="nav-icon fas fa-map-marker-alt"></i>
                                <p>Điểm Đến / Thành Phố</p>
                            </a>
                        </li>

                        <li class="nav-header font-weight-bold text-muted">GIAO DỊCH & THANH TOÁN</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Bookings" ? "active" : "")">
                                <i class="nav-icon fas fa-file-invoice-dollar"></i> <p>
                                    Đơn Đặt & Thanh Toán
                                    @*<span class="badge badge-info right">6</span>*@
                                </p>
                            </a>
                        </li>

                        <li class="nav-header font-weight-bold text-muted">NỘI DUNG & TƯƠNG TÁC</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Reviews" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reviews" ? "active" : "")">
                                <i class="nav-icon fas fa-star"></i>
                                <p>Đánh Giá (Reviews)</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="FileSystem" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-folder-open"></i>
                                <p>Thư Viện Ảnh</p>
                            </a>
                                
                        </li>

                        <li class="nav-header font-weight-bold text-muted">HỆ THỐNG</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Khách Hàng (User)</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Contacts" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contacts" ? "active" : "")">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>Liên Hệ / Góp Ý</p>
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link bg-danger">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p class="font-weight-bold">Đăng xuất</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    <i class="fas fa-check-circle mr-1"></i> @TempData["Message"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                    <i class="fas fa-exclamation-triangle mr-1"></i> @TempData["Error"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @RenderBody()
        </div>

        <footer class="main-footer text-center">
            <strong>Copyright &copy; @DateTime.Now.Year <a href="#">ToursDULICH</a>.</strong> All rights reserved.
        </footer>

    </div>
    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
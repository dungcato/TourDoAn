@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - ToursDULICH Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css" />

    <!-- AdminLTE main style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" asp-area="" class="nav-link">
                        Về trang khách
                    </a>
                </li>
            </ul>

            <!-- Right -->
            <ul class="navbar-nav ml-auto">
                <!-- User dropdown đơn giản -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fas fa-user-circle"></i> Admin
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-user-cog mr-2"></i> Thông tin
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Home" asp-action="Logout" asp-area="" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="brand-link text-center">
                <span class="brand-text font-weight-light">ToursDULICH Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column"
                        data-widget="treeview" role="menu" data-accordion="false">

                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <li class="nav-header">DỊCH VỤ DU LỊCH</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Cities" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-city"></i>
                                <p>Thành phố</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Hotels" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-hotel"></i>
                                <p>Khách sạn</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-bed"></i>
                                <p>Phòng</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Tours" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-route"></i>
                                <p>Tour du lịch</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Images" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-image"></i>
                                <p>Hình ảnh</p>
                            </a>
                        </li>

                        <li class="nav-header">GIAO DỊCH &amp; KHÁCH HÀNG</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>Đặt phòng / Tour</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Người dùng</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Contacts" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>Liên hệ</p>
                            </a>
                        </li>

                        <li class="nav-header">NỘI DUNG WEBSITE</li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="BlogPosts" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-newspaper"></i>
                                <p>Bài viết</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Comments" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-comments"></i>
                                <p>Bình luận</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Reviews" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-star"></i>
                                <p>Đánh giá</p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- /.main-sidebar -->
        <!-- Content Wrapper. Chỗ này tránh bị sidebar đè lên -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center">
            <small>&copy; @DateTime.Now.Year - ToursDULICH Admin.</small>
        </footer>

    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

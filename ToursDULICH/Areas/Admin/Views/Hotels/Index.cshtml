@model IEnumerable<ToursDULICH.Models.Hotel>

@{
    ViewData["Title"] = "Quản lý Khách sạn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Khách sạn</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Khách sạn</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách khách sạn</h3>

                <div class="card-tools">
                    <form asp-area="Admin" asp-controller="Hotels" asp-action="Index"
                          method="get" class="form-inline">
                        <input type="text" name="search" value="@ViewBag.Search"
                               class="form-control form-control-sm mr-2"
                               placeholder="Tìm tên hoặc thành phố..." />
                        <button type="submit" class="btn btn-sm btn-primary mr-1">
                            <i class="fas fa-search"></i>
                        </button>
                        <a asp-area="Admin" asp-controller="Hotels" asp-action="Index"
                           class="btn btn-sm btn-secondary">
                            Tất cả
                        </a>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th style="width:70px;">ID</th>
                            <th>Tên khách sạn</th>
                            <th>Thành phố</th>
                            <th>Giá cơ bản</th>
                            <th>Mô tả</th>
                            <th style="width:140px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HotelId</td>
                                <td>@item.Name</td>
                                <td>@item.City?.CityName</td>
                                <td>@item.BasePrice?.ToString("N0") đ</td>
                                <td>@item.Description</td>
                                <td class="text-right">
                                    <a asp-area="Admin" asp-controller="Hotels" asp-action="Edit"
                                       asp-route-id="@item.HotelId"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form asp-area="Admin" asp-controller="Hotels" asp-action="Delete"
                                          asp-route-id="@item.HotelId"
                                          method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Xóa khách sạn này?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <a asp-area="Admin" asp-controller="Hotels" asp-action="Create"
                   class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm khách sạn
                </a>
            </div>
        </div>

    </div>
</section>


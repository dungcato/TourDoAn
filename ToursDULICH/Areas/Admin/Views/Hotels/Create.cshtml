@model ToursDULICH.Models.Hotel

@{
    ViewData["Title"] = "Thêm Khách Sạn Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm Khách Sạn</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Create" method="post">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Thông tin chi tiết</h3>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name">Tên Khách sạn <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên khách sạn..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CityId">Thành phố</label>
                                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId">
                                    <option value="">-- Chọn Thành Phố --</option>
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BasePrice">Giá phòng cơ bản (VNĐ)</label>
                                <div class="input-group">
                                    <input asp-for="BasePrice" class="form-control" type="number" min="0" step="1000" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">đ</span>
                                    </div>
                                </div>
                                <span asp-validation-for="BasePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating">Hạng sao (1-5)</label>
                            <select asp-for="Rating" class="form-control">
                                <option value="1">1 Sao</option>
                                <option value="2">2 Sao</option>
                                <option value="3">3 Sao</option>
                                <option value="4" selected>4 Sao</option>
                                <option value="5">5 Sao (Vippro)</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Image">Ảnh đại diện</label>
                                <div class="input-group">
                                    <input asp-for="Image" class="form-control" id="Image" placeholder="Chọn ảnh từ hệ thống..." readonly />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-success" onclick="openDialog()">
                                            <i class="fas fa-folder-open"></i> Chọn ảnh
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>

                            <div class="mt-3 text-center">
                                <img id="imgPreview" src="/images/no-image.jpg"
                                     style="max-width: 100%; height: 200px; object-fit: cover; border: 1px dashed #ccc;"
                                     alt="Chưa chọn ảnh" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Description">Mô tả chi tiết</label>
                        <textarea asp-for="Description" id="Detail" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer text-right">
                    <a asp-action="Index" class="btn btn-secondary mr-2">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Khách Sạn</button>
                </div>
            </div>
        </form>
    </div>
</section>

@{
    var summerNote = new ToursDULICH.Areas.Admin.Models.SummerNote("#Detail");
}
<partial name="_SummerNote" model="summerNote" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm này chạy khi bấm nút "Chọn ảnh" màu xanh
        function openDialog() {
            var fm = $('<div/>').dialogelfinder({
                baseUrl: "/Admin/lib/elFinder/",
                url: '/Admin/el-finder-file-system/connector',
                lang: 'vi',
                width: 840,
                height: 450,
                destroyOnClose: true,
                // --- HÀM NÀY CHẠY KHI CHỌN XONG ẢNH ---
                getFileCallback: function (files, fm) {
                    console.log('Ảnh đã chọn:', files.url); // Log để kiểm tra

                    // 1. Điền đường dẫn vào ô input (Cái này ông đã chạy được)
                    $('#Image').val(files.url);

                    // 2. CẬP NHẬT ẢNH XEM TRƯỚC (Dòng này của ông đang thiếu hoặc sai)
                    $('#imgPreview').attr('src', files.url);
                },
                commandsOptions: {
                    getfile: {
                        oncomplete: 'close',
                        folders: false
                    }
                }
            }).dialogelfinder('instance');
        }
    </script>
}
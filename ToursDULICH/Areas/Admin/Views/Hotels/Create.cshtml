@model ToursDULICH.Models.Hotel

@{
    ViewData["Title"] = "Thêm khách sạn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm khách sạn</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Hotels" asp-action="Index">Khách sạn</a>
                    </li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thông tin khách sạn</h3>
            </div>

            <form asp-area="Admin" asp-controller="Hotels" asp-action="Create" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CityId">Thành phố</label>
                        @Html.DropDownListFor(m => m.CityId,
                                 (SelectList)ViewBag.CityId,
                                 "-- Chọn thành phố --",
                                 new { @class = "form-control" })
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BasePrice">Giá cơ bản / đêm</label>
                        <input asp-for="BasePrice" class="form-control" />
                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Ảnh (URL)</label>
                        <input type="text" name="imageUrl" class="form-control"
                               placeholder="Nhập đường dẫn ảnh, ví dụ: /images/hotels/hotel1.jpg" />
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-area="Admin" asp-controller="Hotels" asp-action="Index"
                       class="btn btn-secondary">
                        Quay lại
                    </a>
                </div>
            </form>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

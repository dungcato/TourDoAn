@model IEnumerable<ToursDULICH.Models.Booking>

@{
    ViewData["Title"] = "Quản lý Đơn đặt & Thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark font-weight-bold">Quản lý Đơn đặt & Thanh toán</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fas fa-check-circle mr-1"></i> @TempData["Message"]
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title"><i class="fas fa-list mr-2"></i>Danh sách đơn hàng</h3>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-center">ID</th>
                                <th>Khách hàng</th>
                                <th>Dịch vụ (Tour / Phòng)</th>
                                <th>Ngày đi - Về</th>
                                <th class="text-right">Tổng tiền</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center" style="width: 180px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center align-middle"><strong>#@item.BookingId</strong></td>

                                        <td class="align-middle">
                                            @if (item.User != null)
                                            {
                                                <span class="font-weight-bold">@item.User.FullName</span>

                                                <br />
                                                <small class="text-muted">@item.User.Email</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted font-italic">Khách vãng lai</span>
                                            }
                                        </td>

                                        <td class="align-middle">
                                            @if (item.ToursNavigation != null)
                                            {
                                                <span class="badge badge-info"><i class="fas fa-plane"></i> TOUR</span>
                                                <br />
                                                <span class="text-dark">@item.ToursNavigation.Name</span>
                                            }
                                            else if (item.Room != null)
                                            {
                                                <span class="badge badge-warning"><i class="fas fa-hotel"></i> HOTEL</span>
                                                <br />
                                                <span class="text-dark">@item.Room.RoomName</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Lỗi dữ liệu</span>
                                            }
                                        </td>

                                        <td class="align-middle">
                                            <small><i class="far fa-calendar-alt text-success"></i> @(item.CheckIn.HasValue ? item.CheckIn.Value.ToString("dd/MM/yyyy") : "--")</small><br />
                                            <small><i class="far fa-calendar-check text-danger"></i> @(item.CheckOut.HasValue ? item.CheckOut.Value.ToString("dd/MM/yyyy") : "--")</small>
                                        </td>

                                        <td class="text-right align-middle font-weight-bold text-danger">
                                            @(item.TotalPrice.HasValue ? item.TotalPrice.Value.ToString("#,##0") : "0") ₫
                                        </td>

                                        <td class="text-center align-middle">
                                            @{
                                                string st = item.Status ?? "";
                                                string badgeClass = "badge-secondary";
                                                if (st.Contains("thanh toán", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-success"; }
                                                else if (st.Contains("Chờ", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-warning"; }
                                                else if (st.Contains("Hủy", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-danger"; }
                                            }
                                            <span class="badge @badgeClass" style="font-size: 12px; padding: 8px 12px;">@st</span>
                                        </td>

                                        <td class="text-center align-middle">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                                    <i class="fas fa-cog"></i> Xử lý
                                                </button>
                                                <div class="dropdown-menu">
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@item.BookingId" />
                                                        <button type="submit" name="status" value="Đã thanh toán (Tiền mặt)" class="dropdown-item text-success">
                                                            <i class="fas fa-check mr-2"></i> Xác nhận thanh toán
                                                        </button>
                                                        <button type="submit" name="status" value="Đã thanh toán (VNPay)" class="dropdown-item text-primary">
                                                            <i class="fas fa-credit-card mr-2"></i> Đã trả VNPay
                                                        </button>
                                                        <div class="dropdown-divider"></div>
                                                        <button type="submit" name="status" value="Đã Hủy" class="dropdown-item text-danger">
                                                            <i class="fas fa-times mr-2"></i> Hủy đơn hàng
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>

                                            <form asp-action="Delete" asp-route-id="@item.BookingId" method="post" class="d-inline ml-1" onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn này?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa vĩnh viễn">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5 text-muted">
                                        <i class="fas fa-inbox fa-3x mb-3"></i><br />
                                        Hiện chưa có đơn đặt hàng nào.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                <div class="float-right">
                    Tổng số đơn: <b>@(Model?.Count() ?? 0)</b>
                </div>
            </div>
        </div>
    </div>
</section>
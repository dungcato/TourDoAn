@model IEnumerable<ToursDULICH.Models.Booking>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold text-dark">Dashboard</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.TotalHotels</h3>
                        <p>Khách sạn</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-hotel"></i>
                    </div>
                    <a href="@Url.Action("Index","Hotels", new { area = "Admin" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.TotalRooms</h3>
                        <p>Phòng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <a href="@Url.Action("Index","Rooms", new { area = "Admin" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.TotalTours</h3>
                        <p>Tours Du Lịch</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <a href="@Url.Action("Index","Tours", new { area = "Admin" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.TotalBookings</h3>
                        <p>Đơn đặt hàng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <a href="@Url.Action("Index","Bookings", new { area = "Admin" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header border-0">
                        <h3 class="card-title font-weight-bold">Đơn đặt mới nhất</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Index","Bookings", new { area = "Admin" })" class="btn btn-tool btn-sm">
                                <i class="fas fa-bars"></i> Xem tất cả
                            </a>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Khách hàng</th>
                                    <th>Dịch vụ (Tour/Phòng)</th>
                                    <th>Ngày Check-in</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        // Xử lý lấy tên dịch vụ (Tour hoặc Phòng) an toàn
                                        var tourName = item.ToursNavigation?.Name; // Nếu bạn đã đổi tên trong Model thì sửa thành item.Tour?.Name
                                        var roomName = item.Room?.RoomName;
                                        var serviceName = !string.IsNullOrEmpty(tourName) ? "Tour: " + tourName :
                                        (!string.IsNullOrEmpty(roomName) ? "Phòng: " + roomName : "N/A");

                                        <tr>
                                            <td><a href="#" class="text-muted font-weight-bold">#@item.BookingId</a></td>
                                            <td>@item.User?.FullName</td>
                                            <td>@serviceName</td>
                                            <td>@(item.CheckIn.HasValue ? item.CheckIn.Value.ToString("dd/MM/yyyy") : "--")</td>
                                            <td class="text-success font-weight-bold">
                                                @(item.TotalPrice.HasValue ? item.TotalPrice.Value.ToString("N0") : "0") ₫
                                            </td>
                                            <td>
                                                @{
                                                    var status = item.Status ?? "Mới";
                                                    string badgeClass = "badge-secondary";
                                                    if (status.Contains("thanh toán", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-success"; }
                                                    else if (status.Contains("chờ", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-warning"; }
                                                    else if (status.Contains("hủy", StringComparison.OrdinalIgnoreCase)) { badgeClass = "badge-danger"; }
                                                    else { badgeClass = "badge-info"; }
                                                }
                                                <span class="badge @badgeClass">@status</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br />
                                            Chưa có đơn đặt hàng nào.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="info-box mb-3 bg-white">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-users text-white"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Người dùng đăng ký</span>
                        <span class="info-box-number">@ViewBag.TotalUsers</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-box mb-3 bg-white">
                    <span class="info-box-icon bg-secondary elevation-1"><i class="fas fa-envelope"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Liên hệ / Góp ý</span>
                        <span class="info-box-number">@ViewBag.TotalContacts</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
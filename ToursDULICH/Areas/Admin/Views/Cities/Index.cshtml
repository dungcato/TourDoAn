@model IEnumerable<ToursDULICH.Models.City>

@{
    ViewData["Title"] = "Quản lý Điểm Đến";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold text-dark">Quản lý Điểm Đến</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-action="Create" class="btn btn-success shadow-sm">
                    <i class="fas fa-plus-circle"></i> Thêm mới
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fas fa-check"></i> @TempData["Message"]
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover vertical-align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 50px;" class="text-center">ID</th>
                            <th style="width: 120px;">Ảnh</th>
                            <th>Tên Thành Phố / Tỉnh</th>
                            <th>Quốc gia</th>
                            <th class="text-center">Thống kê</th>
                            <th style="width: 150px;" class="text-center">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.CityId</td>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/no-image.jpg" : item.Image)"
                                             class="img-thumbnail"
                                             style="width: 80px; height: 60px; object-fit: cover;" />
                                    </td>
                                    <td class="font-weight-bold text-primary">@item.CityName</td>
                                    <td>@item.Country</td>
                                    <td class="text-center">
                                        <span class="badge badge-info mr-2">@item.Tours.Count() Tours</span>
                                        <span class="badge badge-warning">@item.Hotels.Count() Hotels</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.CityId" class="btn btn-primary btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.CityId" method="post" class="d-inline ml-1" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center text-muted py-3">Chưa có dữ liệu.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>